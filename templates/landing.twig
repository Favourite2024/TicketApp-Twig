{% block hero %}
<section class="hero">
  <div class="container hero-inner">
    <div class="hero-text">
      <h1>Manage Tickets Seamlessly</h1>
      <p>Track, update, and resolve issues with a clean, consistent UI.</p>
      <div class="cta">
        <a class="btn" href="/?page=login">Login</a>
        <a class="btn-secondary" href="/?page=signup">Get Started</a>
      </div>
    </div>
    <div class="hero-art">
      <div class="decor-circle"></div>
      <div class="decor-circle small"></div>
    </div>
  </div>
  <svg class="wave" viewBox="0 0 1440 120" preserveAspectRatio="none" aria-hidden="true">
